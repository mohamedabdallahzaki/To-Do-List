@using Task.Models.Entites
@model List<Item>

@{
    ViewData["Title"] = "To-Do List";
}

<h1>@ViewData["Title"]</h1>


<form asp-action="AddItem" method="get" style="margin-bottom:20px;">
   
    <button type="submit">Add</button>
</form>

<hr />

@if (!Model.Any())
{
    <p>No tasks yet.</p>
}
else
{
    <table border="1" cellpadding="8" cellspacing="0" style="border-collapse:collapse; width:80%;">
        <thead style="background-color:#f2f2f2;">
            <tr>
                <th>ID</th>
                <th>Task Name</th>
                <th>Description</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>
                        @(item.IsCompleted==true ? "Completed" : "NotCompleted")
                    </td>
                    <td>
                        
                        <form asp-action="ChangeStatues" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit">
                                @(item.IsCompleted ? "Undo" : "Complete")
                            </button>
                        </form>

                     
                        <form asp-action="Delete" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" style="margin-left:5px;">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
